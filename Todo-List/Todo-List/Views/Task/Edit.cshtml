@model Todo_List.Models.Task

@section Styles {
    <link rel="stylesheet" href="~/css/form.css" />
}

<main>
    <div class="task-edit-container">
        <h2 class="form-title">Cập Nhật Công Việc #@Model.Id</h2>
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="task-form">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" placeholder="Nhập tiêu đề" class="form-input" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="8" placeholder="Nhập mô tả..." class="form-input"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="form-group">
                <label asp-for="DueDate"></label>
                <input asp-for="DueDate" type="date" class="form-input" />
                <span class="text-danger" asp-validation-for="DueDate"></span>
            </div>

            <div class="form-group">
                <label>Status:</label>
                <div class="radio-group">
                    <label>
                        <input asp-for="Status" type="radio" value="Done" /> Hoàn thành
                    </label>
                    <label>
                        <input asp-for="Status" type="radio" value="In Progress" /> Đang thực hiện
                    </label>
                    <label>
                        <input asp-for="Status" type="radio" value="Pending" /> Chưa bắt đầu
                    </label>
                </div>
                <span class="text-danger" asp-validation-for="Status"></span>
            </div>

            <div class="form-btn">
                <button type="submit" class="btn-submit">Lưu</button>
                <a asp-action="TodoList" class="btn-cancle">Hủy</a>
            </div>
        </form>
    </div>
</main>
