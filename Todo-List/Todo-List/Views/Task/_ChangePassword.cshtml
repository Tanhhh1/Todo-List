@model Todo_List.Models.ChangePasswordModel

<h2>Cài đặt Mật khẩu</h2>

<form id="changePasswordForm" asp-action="ChangePassword" asp-controller="Task" method="post">
    <div class="form-row">
        <div class="form-group">
            <label for="newPassword">Mật khẩu mới</label>
            <input asp-for="NewPassword" type="password" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="confirmPassword">Xác nhận mật khẩu mới</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-update">Đổi mật khẩu</button>
        <a asp-action="TodoList" class="btn btn-cancel">Hủy</a>
    </div>
</form>
