@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}
<div class="container">
    <aside class="sidebar">
        <div class="profile">
            <img id="avatar"
                 src="https://www.shutterstock.com/image-vector/user-circle-isolated-icon-round-600nw-2459622791.jpg"
                 alt="Avatar">
            <h3>Vũ Doãn Dũng</h3>
        </div>
        <ul class="menu">
            <li><a href="#" class="active" data-target="account"><i class="fa-solid fa-user"></i> Account</a></li>
            <li><a href="#" data-target="password"><i class="fa-solid fa-lock"></i> Password</a></li>
            <li><a href="#"><i class="fa-solid fa-right-from-bracket"></i> Logout</a></li>
        </ul>
    </aside>

    <main class="content">
        <div id="account" class="form-section active">
            <h2>Account Settings</h2>
            <form>
                <input type="file" id="avatarInput" accept="image/*" style="display: none;">

                <div class="form-row">
                    <div class="form-group">
                        <label for="fullname">Full Name</label>
                        <input type="text" id="fullname" value="Vũ Doãn Dũng">
                    </div>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" value="username1">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="date">Date</label>
                        <input type="date" id="date" value="vudungit92@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" id="address" value="+91 9876543215">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" value="vudungit92@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone number</label>
                        <input type="text" id="phone" value="+91 9876543215">
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-update">Update</button>
                    <button type="reset" class="btn btn-cancel">Cancel</button>
                </div>
            </form>
        </div>

        <!-- Password Settings -->
        <div id="password" class="form-section">
            <h2>Password Settings</h2>
            <form>
                <div class="form-row">
                    <div class="form-group">
                        <label for="newPassword">New Password</label>
                        <input type="password" id="newPassword">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm New Password</label>
                        <input type="password" id="confirmPassword">
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-update">Change Password</button>
                    <button type="reset" class="btn btn-cancel">Cancel</button>
                </div>
            </form>
        </div>
    </main>
</div>

@section Scripts {
    <script src="~/js/profile.js"></script>
}