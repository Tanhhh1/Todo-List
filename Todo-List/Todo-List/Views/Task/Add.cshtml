@model Todo_List.Models.Task

@section Styles {
    <link rel="stylesheet" href="~/css/form.css" />
}

<main>
    <div class="task-edit-container">
        <h2 class="form-title">Thêm Công Việc Mới</h2>
        <form asp-controller="Task" asp-action="Add" method="post" class="task-form">
            <div class="form-group">
                <label asp-for="Title">Tiêu đề:</label>
                <input asp-for="Title" type="text" placeholder="Nhập tiêu đề" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Mô tả:</label>
                <textarea asp-for="Description" rows="8" placeholder="Nhập mô tả..." class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DueDate">Ngày đến hạn:</label>
                <input asp-for="DueDate" type="date" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>

            <div class="form-btn">
                <button type="submit" class="btn-submit">Lưu</button>
                <a href="/task/todolist" class="btn-cancle">Hủy</a>
            </div>
        </form>
    </div>
</main>
