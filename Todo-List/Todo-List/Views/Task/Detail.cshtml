@section Styles {
    <link rel="stylesheet" href="~/css/form.css" />
}
<main>
    <div class="task-detail-container">
        <h2 class="detail-title">Task Detail</h2>

        <div class="detail-group">
            <label>Title:</label>
            <p class="detail-text">Học ASP.NET Core MVC</p>
        </div>

        <div class="detail-group">
            <label>Description:</label>
            <p class="detail-text">
                Hoàn thành bài tập thực hành CRUD trong ASP.NET Core MVC.
            </p>
        </div>

        <div class="detail-group">
            <label>Due Date:</label>
